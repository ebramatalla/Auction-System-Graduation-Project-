		"mongoose-autopopulate": "^0.16.1",
		"nestjs-form-data": "^1.6.3",
		"nodemailer": "^6.7.3",
		"passport": "^0.5.2",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.5.5",
		"socket.io": "^4.5.0",
		"stripe": "^8.219.0",
		"swagger-ui-express": "^4.3.0",
		"twilio": "^3.77.2"
	},
	"devDependencies": {
		"@nestjs/cli": "^8.2.5",
		"@nestjs/schematics": "^8.0.10",
		"@nestjs/testing": "^7.5.5",
